@model TodoApp.Models.USER

@{
    ViewData["Title"] = "Update";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-field">
                <label for="Fullname">Fullname</label>
                <input asp-for="fullname" class="validate" value="@Model.fullname" />
                @if (TempData["errorFullname"] != null)
                {
                    <span class="red-text">@TempData["errorFullname"]</span>
                }
            </div>
            <div class="input-field">
                <label for="Email">Email</label>
                <input asp-for="email" class="validate" value="@Model.email"/>
                @if (TempData["errorEmail"] != null)
                {
                    <span class="red-text">@TempData["errorEmail"]</span>
                }
            </div>
            <div class="input-field">
                <label for="Password">Password</label>
                <input asp-for="password" class="validate" type="password" value="@Model.password" />
                @if (TempData["errorPassword"] != null)
                {
                    <span class="red-text">@TempData["errorPassword"]</span>
                }
            </div>
            <div class="input-field">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

